{{!< default}}
{{> header}}
<div class="wrapper_barley">
  <main class="main_barley" role="main">
    {{#post}}
      <article class="article_barley" role="article" itemscope itemtype="http://schema.org/Article">
        <header class="postheader_barley">
          <h1 class="posttitle_barley" itemprop="headline" id="header">{{title}}</h1>
        </header>
        <div class="postcontent_barley" itemprop="articleBody">
          {{content}}
        </div>
        <footer class="article_meta_barley">
          <div class="half">
            <div>
              <span class="dimmed">Posted on </span>
              <time class="date_barley" datetime="{{date format="YYYY-MM-DD"}}"
                    itemprop="datePublished">{{date format='MM-DD-YYYY'}}</time>
            </div>
            {{#if tags}}
              <div>
                <span class="dimmed"> Tagged in </span>
                <span> {{tags separator=" , "}}</span>
              </div>
            {{/if}}
          </div>
          <div class="half text-right">
            <h6 class="share_barley dimmed">Share this post</h6>
            <a class="share_barley  btn" target="_blank"
               href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}">
              <i class="fa fa-twitter"></i><span class="hidethis_barley"></span>
            </a>
            <a class="share_barley  btn" target="_blank"
               href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}">
              <i class="fa fa-facebook"></i><span class="hidethis_barley"></span>
            </a>
            <a class="share_barley  btn" target="_blank"
               href="https://plus.google.com/share?url={{url absolute="true"}}">
              <i class="fa fa-google-plus"></i><span class="hidethis_barley"></span>
            </a>
          </div>
          <div class="clear"></div>
          {{#if author}}
            <div class="postauthor_barley">
              <address itemscope itemtype="http://schema.org/Person">
                {{#if author.image}}
                  <figure class="user-image">
                    <div itemprop="image" class="authorimage_barley"
                         style="background-image: url({{author.image}});"></div>
                  </figure>
                {{/if}}
                <h6 class="authorname_barley">
                  <span itemprop="name">{{author.name}}</span></h6>
                {{#if author.website}}
                  <div class="authorwebsite_barley"><a href="{{author.website}}" itemprop="url">{{author.website}}</a>
                  </div>
                {{/if}}
                <div class="authorbio_barley">
                  <p>{{author.bio}}</p>
                </div>
                <div class="clear"></div>
              </address>
            </div>
          {{/if}}

        </footer>
        {{> disqus}}
      </article>
    {{/post}}

    {{#if pagination}}
      <div class="pagination_barley">
        {{{pagination}}}
      </div>
    {{/if}}
  </main>
</div>
{{> footer}}
